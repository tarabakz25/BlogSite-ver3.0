---
const { contactName, contactLink } = Astro.props;
---
<div class="contact-box">
    <a href={contactLink}>{contactName}</a>
</div>

<style>
    .contact-box {
        margin: 30px;    
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px 40px;
        border: 2px solid white;
        position: relative;
        color: white;
        font-family: 'Anonymous pro', sans-serif;
        font-size: 24px;
        width: 200px; /* 必要に応じて調整 */
        height: 20px; /* 必要に応じて調整 */
    }
    .contact-box a {
        color: white;
        text-decoration: none;
    }
    .contact-box::before,
    .contact-box::after {
        content: '';
        position: absolute;
        border: 2px solid white;
        width: 100%;
        height: 100%;
        top: -10px;
        left: -10px;
        z-index: -1;
    }
</style>